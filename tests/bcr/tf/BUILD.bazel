load("@rules_tf//tf:def.bzl", "tf_providers_versions", "tf_format", "tf_gen_doc")

tf_providers_versions(
    name = "versions",
    tf_version = ">= 1.9, <= 1.13",
    providers = {
        "random" : "hashicorp/random:3.3.2",
        "null"   : "hashicorp/null:3.1.1",
        "terraform"   : "terraform.io/builtin/terraform",
    },
)

tf_format(
    name = "tffmt",
    modules = ["//{}/{}".format(package_name(), m) for m in subpackages(include = ["**/*"]) if not (m == "provider_version_tests" or m.startswith("provider_version_tests/"))],
)

tf_gen_doc(
    name = "tfgendoc",
    modules = ["//{}/{}".format(package_name(), m) for m in subpackages(include = ["**/*"]) if not (m == "provider_version_tests" or m.startswith("provider_version_tests/"))],
)

filegroup(
    name = "tfdoc-config",
    srcs = [
        "my-tfdoc-config.yaml",
    ],
)

filegroup(
    name = "tflint-custom-config",
    srcs = [
        "my-tflint-config.hcl",
    ],
    visibility = ["//visibility:public"],
)

tf_gen_doc(
    name   = "custom-tfgendoc",
    modules = ["//{}/{}".format(package_name(), m) for m in subpackages(include = ["**/*"]) if not (m == "provider_version_tests" or m.startswith("provider_version_tests/"))],
    config = ":tfdoc-config",
)
